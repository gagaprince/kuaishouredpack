{
    "apps": [
        {
            "name": "kuaishouredpack.app",
            "script": "./dist/main.js",
            "env": {},
            "exec_interpreter": "node",
            "exec_mode": "cluster_mode",
            "instances": 1,
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "max_memory_restart": "1200M",
            "merge_logs": true,
            "error_file": "/root/logs/kuaishouredpack/console-error.log",
            "out_file": "/root/logs/kuaishouredpack/console-out.log",
            "pid_file": "/root/logs/kuaishouredpack/kuaishouredpack.pid",
            "watch": false
        }
    ]
}